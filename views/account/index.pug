doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Account List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-100 min-h-screen p-6 font-sans")

    .max-w-6xl.mx-auto.bg-white.p-8.rounded-xl.shadow-md
      h1(class="text-3xl font-semibold text-gray-800 mb-6 text-center") Account List

      .flex.justify-between.items-center.mb-6
        a(href="/account/create", class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition") + Create New Account
        a(href="/account/v1/register", class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition") + Register Account
        a(href="/api/account/login", class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition") + Login

        form(action="/account/search", method="get", class="flex items-center gap-3")
          label(for="searchEmail", class="text-gray-700 font-medium") Search by Email:
          input(type="email", name="searchEmail", id="searchEmail", required, class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none")
          button(type="submit", class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition") Search

      table(class="w-full table-auto border-collapse shadow-sm")
        thead
          tr(class="bg-gray-200 text-gray-700 text-left")
            th(class="px-4 py-3") Account ID
            th(class="px-4 py-3") Email
            th(class="px-4 py-3") Phone
            th(class="px-4 py-3") Image
        tbody
          if accounts && accounts.length > 0
            each account in accounts
              tr(class="hover:bg-gray-50 border-b")
                td(class="px-4 py-3 text-gray-800")= account.id
                td(class="px-4 py-3 text-gray-800")= account.email
                td(class="px-4 py-3 text-gray-800")= account.phone
                td(class="px-4 py-3")
                  img(src=`/images/${account.image}`, alt=`Account Image ${account.id}`, class="w-12 h-12 rounded-full object-cover border")
          else
            tr
              td(colspan="4", class="text-center text-gray-500 py-6") No accounts found
