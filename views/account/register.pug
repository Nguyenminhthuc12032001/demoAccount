doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Register Account
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    body(class="bg-gray-100 min-h-screen flex items-center justify-center p-6")

        main(class="w-full max-w-md bg-white p-8 rounded-xl shadow-md space-y-6")

            if errors && errors.length > 0
                div(class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative")
                    h2(class="font-bold") Validation Errors:
                    ul(class="list-disc pl-5")
                        each error in errors
                            li= error.msg
            h1(class="text-2xl font-semibold text-center text-gray-800") Register Account
            form(action="/api/account/v1/register", method="post", class="space-y-5")
                div
                    label(for="email", class="block mb-1 font-medium text-gray-700") Email
                    input(type="email", name="email", id="email", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")

                div
                    label(for="phone", class="block mb-1 font-medium text-gray-700") Phone
                    input(type="tel", name="phone", id="phone", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")

                div
                    label(for="password", class="block mb-1 font-medium text-gray-700") Password
                    input(type="password", name="password", id="password", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")

                div
                    label(for="confirm_password", class="block mb-1 font-medium text-gray-700") Confirm Password
                    input(type="password", name="confirm_password", id="confirm_password", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")

                div
                    button(type="submit", class="w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50") Register