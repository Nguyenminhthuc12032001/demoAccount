doctype html

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Create New Account
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-100 min-h-screen flex items-center justify-center p-6")

    main(class="w-full max-w-md bg-white p-8 rounded-xl shadow-md space-y-6")

      if errors && errors.length > 0
        div(class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative")
          h2(class="font-bold") Validation Errors:
          ul(class="list-disc pl-5")
            each error in errors
              li= error.msg

      h1(class="text-2xl font-semibold text-center text-gray-800") Create New Account

      form(action="/account/create", method="post", enctype="multipart/form-data", class="space-y-5")
        div
          label(for="email", class="block mb-1 font-medium text-gray-700") Email
          input(type="email", name="email", id="email", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")
          if errors && errors.email
            each error in errors.email
              p(class="text-red-500 text-sm mt-1")= error.msg

        div
          label(for="password", class="block mb-1 font-medium text-gray-700") Password
          input(type="password", name="password", id="password", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")
          if errors && errors.password
            each error in errors.password
              p(class="text-red-500 text-sm mt-1")= error.msg

        div
          label(for="confirmPassword", class="block mb-1 font-medium text-gray-700") Confirm Password
          input(type="password", name="confirmPassword", id="confirmPassword", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")
          if errors && errors.confirmPassword
            each error in errors.confirmPassword
              p(class="text-red-500 text-sm mt-1")= error.msg

        div
          label(for="phone", class="block mb-1 font-medium text-gray-700") Phone
          input(type="tel", name="phone", id="phone", required, class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500")
          if errors && errors.phone
            each error in errors.phone
              p(class="text-red-500 text-sm mt-1")= error.msg

        div
          label(for="image", class="block mb-1 font-medium text-gray-700") Image
          input(type="file", name="image", accept="image/*", required, class="w-full text-gray-700")
          if errors && errors.image
            each error in errors.image
              p(class="text-red-500 text-sm mt-1")= error.msg

        div
          button(type="submit", class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 rounded-lg transition") Create Account
